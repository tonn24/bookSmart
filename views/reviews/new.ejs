<% include ../partials/header %>
<div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Add New Review to <%= book.title %></h2>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/books/<%= book._id%>/reviews" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="exampleFormControlTextarea3" rows="21" name="review[text]" placeholder="Book review"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/books/<%= book._id%>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %> 