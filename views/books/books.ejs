<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
                <h1>BookSmart </h1>
                <p>View people's opinions on different books</p>
                <p>
                    <a href="/books/new" class="btn btn-success btn-large">Add New Book</a>
                </p>
        </div>
    </header>

    <div class="row text-center" id="book-grid">
            <% books.forEach(function(book){ %>
                <div class="col-xl-3  col-lg-4 col-md-6 col-sm-6">
                    <div class="card">
                      <img class="card-img-top" src="<%= book.image %>" alt="<%= book.name %>">
                      <div class="card-body">
                        <h4 class="card-title"><%= book.title %></h4>
                        <hr>
                        <p><%= book.author %></p>
                        <a href="/books/<%= book._id %>" class="btn btn-primary">More Info</a>
                      </div>
                    </div>
                </div>
            <% }); %>
        </div>

<% include ../partials/footer %>