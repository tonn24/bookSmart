<% include ../partials/header %>
<div class="row">
        <div class="col-md-4" id="showCard">
                  <img class="card-img-top" src="<%= book.image %>" alt="<%= book.title %>">
                  <div class="card-body">
                        <h5 class="card-title"><%= book.title %></h5>
                        <h6><%= book.author %></h6><hr>
                        <p class="card-text"><%= book.info %></p>
                  
                </div>
            </div>
        </div>
        <span></span>
        <div class="container">
            <div class="card">
                 <div class="card-body">
                    <div class="text-right">
                        <a href="/books/<%= book._id %>/reviews/new"class="btn btn-success" >Add New Review</a>
                    </div>
                    <hr>
                    <div class="row">
                    <% book.reviews.forEach((review) => { %>
                        <div class="col-md-12 mb-2">
                            <div class="card">
                                <div class="card-body">
                                    <div class="float-left">
                                        <p class="card-title"><strong><%= review.author %></strong></p>
                                        <span class="float-right">10 days ago</span>
                                        <p class="card-text"><%= review.text %></p>
                                     </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    </div>
                </div>
        </div>
        

<% include ../partials/footer %> 
